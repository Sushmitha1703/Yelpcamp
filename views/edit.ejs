<% layout('layout/boilerplate') %> 
<h1 class="text-center">Edit Campground</h1>
<div class="row">
    <div class="col-md-6 offset-3">
        <form action="/campground/<%=campground._id%>?_method=PUT" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
            <label class="form-label" for="title">name</label>
            <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>" required>
            </div>
            <br>
            <div class="mb-3">
            <label  class="form-label" for="location">location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>" required>
            </div>
            <br>
            <div class="mb-3">
              <label  class="form-label" for="image">image URL</label>
              <input  class="form-control" type="file" id="image" name="images" multiple="multiple" >
            </div>
            <div class="mb-3">
            <label  class="form-label" for="price">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" aria-label="price-label" name="campground[price]" placeholder="price in dollars" value="<%=campground.price%>" required>
            </div>
            </div>
            <div class="mb-3">
            <label  class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=campground.description%></textarea>
            </div>
            <div class="mb-3">
                <% campground.images.forEach(function (img,i) { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="images-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        <label class="form-check-label" for="images-<%=i%>">
                          Delete
                        </label>
                      </div>
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="img">
            <%    })  %>
            </div>
            <div class="mb-3">
            <button class="btn btn-info" type="submit">Update Campground</button>
            <a class="btn btn-success" href="/campground">back</a>
            </div>
        </form>
      